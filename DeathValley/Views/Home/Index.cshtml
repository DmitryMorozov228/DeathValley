@model DeathValley.Models.Param

<div class="row">
    <div class="col-md-8">
        <hr>
        <div id="image"></div>
    </div>
    <div class="col-md-4">
        <hr>
        @using (Html.BeginForm("CreateDataChart", "Home", FormMethod.Post, new { @id = "resForm" }))
        {
            <p>Function: y = 
                @Html.TextBoxFor(m => m.CoefficientA, "Coefficient A", new {@id = "inputData" })x^2 + 
                @Html.TextBoxFor(m => m.CoefficientB, "Coefficient B", new { @id = "inputData" })x + 
                @Html.TextBoxFor(m => m.CoefficientC, "Coefficient C", new { @id = "inputData" })
            </p>
            <p>Step: 
                @Html.TextBoxFor(m => m.Step, "Step", new { @id = "inputData" })
            </p>
            <p>From:
                @Html.TextBoxFor(m => m.RangeFrom, "RangeFrom", new { @id = "inputData" }) to 
                @Html.TextBoxFor(m => m.RangeTo, "RangeTo", new { @id = "inputData" })
            </p>
            <p><input id="resbutton" type="submit" class="btn btn-default" value="Plot"/></p>
        } 
    </div>
</div>

